bindsym $mod+Shift+y move workspace to output DP2-1
# bindsym $mod+Shift+u move workspace to output DP2
bindsym $mod+Shift+n move workspace to output eDP1

# Docking and undocking laptop
bindsym $mod+Shift+Ctrl+d exec ~/.screenlayout/dock.sh
bindsym $mod+Shift+d exec ~/.screenlayout/undock.sh

# volume keybindings
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -2%
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +2%

# Touchpad controls
